<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ua.com.mexanik.docslance.fragments.fragments.registratedocfragment.AboutMeInfo"
    android:layout_margin="15dp">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_about_me_info"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewSpecialization"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextTextViewExperience"
        android:layout_marginTop="21dp"
        android:hint="Your specialization"
        android:text="" />

    <AutoCompleteTextView
        android:id="@+id/editTextViewEducation"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCompleteTextViewSpecialization"
        android:layout_marginTop="21dp"
        android:hint="Your education"
        android:text="" />

    <EditText
        android:id="@+id/editTextTextViewExperience"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image_about_me_info"
        android:layout_marginTop="40dp"
        android:hint="Add some info about your experience"
        android:inputType="text|textMultiLine"
        android:maxLines="3"
        android:text="" />

    <EditText
        android:id="@+id/editTextPricePerHour"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextViewEducation"
        android:layout_marginTop="21dp"
        android:hint="Add your job cost per hour "
        android:inputType="numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextPricePerHour"
        android:layout_marginTop="21dp"
        android:hint="Your current age"
        android:inputType="numberDecimal"
        android:text="" />

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/editTextAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Submit"
        android:textColor="@color/gray"
        app:sub_btn_background="@color/white"
        app:sub_btn_duration="3000"
        app:sub_btn_line_color="@color/colorPrimary"
        app:sub_btn_ripple_color="@color/colorPrimaryDark"
        app:sub_btn_tick_color="@color/white" />


</RelativeLayout>
